---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact | Kristy Wong - VFX Artist">
	<Header />

	<main class="pt-24 pb-16">
		<div class="container mx-auto px-6">
			<h1 class="mb-2 text-4xl font-bold">Contact Me</h1>
			<p class="mb-12 text-xl text-gray-400">Let's work together on your next project</p>

			<div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
				<!-- Contact Info -->
				<div>
					<div class="rounded-lg bg-gray-800/50 p-8">
						<h2 class="mb-6 text-2xl font-bold">Get In Touch</h2>

						<div class="space-y-6">
							<div class="flex items-start">
								<div class="mr-4 rounded-lg bg-purple-600/20 p-3">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="h-6 w-6 text-purple-400"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
										></path>
									</svg>
								</div>
								<div>
									<h3 class="mb-1 text-lg font-medium text-gray-200">Email</h3>
									<p class="text-gray-400">contact@kristywong.com</p>
								</div>
							</div>

							<div class="flex items-start">
								<div class="mr-4 rounded-lg bg-purple-600/20 p-3">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="h-6 w-6 text-purple-400"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
										></path>
									</svg>
								</div>
								<div>
									<h3 class="mb-1 text-lg font-medium text-gray-200">Phone</h3>
									<p class="text-gray-400">+1 (555) 123-4567</p>
								</div>
							</div>

							<div class="flex items-start">
								<div class="mr-4 rounded-lg bg-purple-600/20 p-3">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="h-6 w-6 text-purple-400"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
										></path>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
									</svg>
								</div>
								<div>
									<h3 class="mb-1 text-lg font-medium text-gray-200">Location</h3>
									<p class="text-gray-400">Los Angeles, California</p>
								</div>
							</div>
						</div>

						<div class="mt-12">
							<h3 class="mb-4 text-lg font-medium text-gray-200">Follow Me</h3>
							<div class="flex space-x-4">
								<a href="#" class="text-gray-400 transition hover:text-purple-400">
									<span class="sr-only">Instagram</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path
											fill-rule="evenodd"
											d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
											clip-rule="evenodd"></path>
									</svg>
								</a>
								<a href="#" class="text-gray-400 transition hover:text-purple-400">
									<span class="sr-only">Twitter</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path
											d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
										></path>
									</svg>
								</a>
								<a href="#" class="text-gray-400 transition hover:text-purple-400">
									<span class="sr-only">LinkedIn</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path
											d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
										></path>
									</svg>
								</a>
								<a href="#" class="text-gray-400 transition hover:text-purple-400">
									<span class="sr-only">Vimeo</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path
											d="M23.977 6.416c-.105 2.338-1.739 5.543-4.894 9.609-3.268 4.247-6.026 6.37-8.29 6.37-1.409 0-2.578-1.294-3.553-3.881L5.322 11.4C4.603 8.816 3.834 7.522 3.01 7.522c-.179 0-.806.378-1.881 1.132L0 7.197a315.065 315.065 0 003.501-3.128C5.08 2.701 6.266 1.984 7.055 1.91c1.867-.18 3.016 1.1 3.447 3.838.465 2.953.789 4.789.971 5.507.539 2.45 1.131 3.674 1.776 3.674.502 0 1.256-.796 2.265-2.385 1.004-1.589 1.54-2.797 1.612-3.628.144-1.371-.395-2.061-1.614-2.061-.574 0-1.167.121-1.777.391 1.186-3.868 3.434-5.757 6.762-5.637 2.473.06 3.628 1.664 3.493 4.797l-.013.01z"
										></path>
									</svg>
								</a>
							</div>
						</div>
					</div>
				</div>

				<!-- Contact Form -->
				<div>
					<form class="rounded-lg bg-gray-800/50 p-8">
						<h2 class="mb-6 text-2xl font-bold">Send Me a Message</h2>

						<div class="grid grid-cols-1 gap-6">
							<div>
								<label for="name" class="mb-2 block text-sm font-medium text-gray-300">Name</label>
								<input
									type="text"
									id="name"
									name="name"
									class="w-full rounded-lg border-gray-600 bg-gray-700 px-4 py-2 text-white focus:border-transparent focus:ring-2 focus:ring-purple-500 focus:outline-none"
									placeholder="Your Name"
									required
								/>
							</div>

							<div>
								<label for="email" class="mb-2 block text-sm font-medium text-gray-300">Email</label
								>
								<input
									type="email"
									id="email"
									name="email"
									class="w-full rounded-lg border-gray-600 bg-gray-700 px-4 py-2 text-white focus:border-transparent focus:ring-2 focus:ring-purple-500 focus:outline-none"
									placeholder="your.email@example.com"
									required
								/>
							</div>

							<div>
								<label for="subject" class="mb-2 block text-sm font-medium text-gray-300"
									>Subject</label
								>
								<input
									type="text"
									id="subject"
									name="subject"
									class="w-full rounded-lg border-gray-600 bg-gray-700 px-4 py-2 text-white focus:border-transparent focus:ring-2 focus:ring-purple-500 focus:outline-none"
									placeholder="Project Inquiry"
									required
								/>
							</div>

							<div>
								<label for="message" class="mb-2 block text-sm font-medium text-gray-300"
									>Message</label
								>
								<textarea
									id="message"
									name="message"
									rows="5"
									class="w-full rounded-lg border-gray-600 bg-gray-700 px-4 py-2 text-white focus:border-transparent focus:ring-2 focus:ring-purple-500 focus:outline-none"
									placeholder="How can I help with your project?"
									required></textarea>
							</div>

							<div>
								<button
									type="submit"
									class="w-full rounded-lg bg-purple-600 px-4 py-2 font-medium text-white transition hover:bg-purple-700"
								>
									Send Message
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</main>
</Layout>
