	{
		id: "project-1",
		title: "VFX Animation Project 1",
		description:
			"Detailed description of this VFX animation project, including techniques used and your role in the project.",
		tags: ["3D Animation", "Visual Effects", "Compositing"],
		thumbnail: "/placeholder-1.jpg",
	},
	{
		id: "project-2",
		title: "VFX Animation Project 2",
		description:
			"Detailed description of this VFX animation project, including techniques used and your role in the project.",
		tags: ["Motion Graphics", "Character Animation", "Rigging"],
		thumbnail: "/placeholder-2.jpg",
	},
	{
		id: "project-3",
		title: "VFX Animation Project 3",
		description:
			"Detailed description of this VFX animation project, including techniques used and your role in the project.",
		tags: ["Particle Effects", "Dynamics", "Lighting"],
		thumbnail: "/placeholder-3.jpg",
	},
	{
		id: "project-4",
		title: "VFX Animation Project 4",
		description:
			"Detailed description of this VFX animation project, including techniques used and your role in the project.",
		tags: ["Environment Design", "Texturing", "Rendering"],
		thumbnail: "/placeholder-4.jpg",
	},
	{
		id: "project-5",
		title: "VFX Animation Project 5",
		description:
			"Detailed description of this VFX animation project, including techniques used and your role in the project.",
		tags: ["Simulation", "Fluid Dynamics", "VFX"],
		thumbnail: "/placeholder-5.jpg",
	},
	{
