		tags: ["Tracking", "Matchmoving", "Integration"],
		thumbnail: "/placeholder-6.jpg",
	},
];
---

<Layout title="Portfolio | Kristy Wong - VFX Artist">
	<Header />

	<main class="pt-24 pb-16">
		<div class="container mx-auto px-6">
			<h1 class="mb-2 text-4xl font-bold">Portfolio</h1>
			<p class="mb-12 text-xl text-gray-400">A collection of my VFX and animation projects</p>

			<!-- Portfolio Filter (optional) -->
			<div class="mb-8 flex flex-wrap gap-2">
				<button class="rounded-lg bg-purple-600 px-4 py-2 text-sm font-medium text-white"
					>All</button
				>
				<button
					class="rounded-lg bg-gray-700 px-4 py-2 text-sm font-medium text-white transition hover:bg-gray-600"
					>3D Animation</button
				>
				<button
					class="rounded-lg bg-gray-700 px-4 py-2 text-sm font-medium text-white transition hover:bg-gray-600"
					>Visual Effects</button
				>
				<button
					class="rounded-lg bg-gray-700 px-4 py-2 text-sm font-medium text-white transition hover:bg-gray-600"
					>Motion Graphics</button
				>
			</div>

			<!-- Portfolio Grid -->
			<div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
				{
					portfolioItems.map((item) => (
						<div class="group overflow-hidden rounded-lg bg-gray-800 transition duration-300 hover:scale-[1.02] hover:transform">
							<a href={`/portfolio/${item.id}`}>
								<div class="relative aspect-video overflow-hidden bg-gray-700">
									{/* Project thumbnail (replace with actual images) */}
									<div class="absolute inset-0 flex items-center justify-center text-gray-500">
										<span class="text-lg">{item.title} Thumbnail</span>
									</div>
									<div class="absolute inset-0 bg-purple-600/20 opacity-0 transition group-hover:opacity-100" />
								</div>
								<div class="p-6">
									<h3 class="mb-2 text-xl font-bold">{item.title}</h3>
									<p class="mb-4 line-clamp-2 text-gray-400">{item.description}</p>

									<div class="mb-4 flex flex-wrap gap-2">
										{item.tags.map((tag) => (
											<span class="rounded bg-gray-700 px-2 py-1 text-xs text-gray-300">{tag}</span>
										))}
									</div>

									<span class="inline-flex items-center font-medium text-purple-400 group-hover:text-purple-300">
										View project details
										<svg
											xmlns="http://www.w3.org/2000/svg"
											class="ml-1 h-4 w-4"
											viewBox="0 0 20 20"
											fill="currentColor"
										>
											<path
												fill-rule="evenodd"
												d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
												clip-rule="evenodd"
											/>
										</svg>
									</span>
								</div>
							</a>
						</div>
					))
				}
			</div>
		</div>
	</main>
</Layout>
