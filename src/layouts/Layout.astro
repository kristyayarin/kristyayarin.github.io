---
interface Props {
	title?: string;
}

const { title = "Kristy Wong - VFX Artist Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Portfolio website of Kristy Wong, a professional VFX artist showcasing animations and visual effects work." />
		<title>{title}</title>
	</head>
	<body class="bg-gray-900 text-white min-h-screen">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
